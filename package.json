{
  "name": "@paotuan/qqchannel-bot",
  "private": true,
  "version": "2.0.0-alpha.1",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev:client": "yarn workspace client run dev",
    "build:client": "yarn workspace client run build",
    "dev:server": "yarn workspace server run dev",
    "clean:server": "yarn workspace server run clean",
    "build:server": "yarn workspace server run build",
    "build": "npm run build:client && npm run build:server",
    "preview": "node packages/dist/bundle.js",
    "start": "pm2 start packages/dist/bundle.js --name qqchannel-bot",
    "stop": "pm2 stop qqchannel-bot",
    "test": "jest"
  },
  "dependencies": {
    "chalk": "4",
    "dotenv": "^16.0.2",
    "lodash": "^4.17.21",
    "mitt": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.189",
    "@types/node": "^18.7.17",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.20.2",
    "eslint": "8.57.0",
    "jest": "^29.5.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.4.3"
  }
}
